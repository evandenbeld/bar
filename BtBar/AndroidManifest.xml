<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.tumbolia.bar.android"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    
    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Btbar">
               <activity
            	android:name="nl.tumbolia.bar.android.BTBarActivity"
            	android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>    
         <activity
            	android:name="nl.tumbolia.bar.android.bluetooth.DeviceListActivity"
            	android:label="@string/connect"/>   
        <activity
            	android:name="nl.tumbolia.bar.android.cocktails.CocktailDetailActivity"/>   
    </application>

</manifest>
